<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="textViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="titleMainTextView" parent="textViewStyle">
        <item name="android:textColor">@color/colorMain</item>
        <item name="android:textSize">@dimen/extraBigTextSize</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="mainTextView" parent="textViewStyle">
        <item name="android:textSize">@dimen/mainTextSize</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="smallTextViewMedium" parent="textViewStyle">
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="mainBtnStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/bigPadding</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="numberPicker" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorMain</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="colorControlNormal">@color/colorTransparent</item>
        <item name="android:textColorPrimary">@color/colorMain</item>
    </style>

    <style name="mainEditText">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_edt</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:hint">@string/KeyWords</item>
        <item name="android:padding">@dimen/mainPadding</item>
        <item name="android:gravity">center</item>
    </style>

    <string name="KeyWords">Key words</string>
</resources>